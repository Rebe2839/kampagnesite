---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/style.css";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="crown_favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <script src="https://kit.fontawesome.com/2efe57052b.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.typekit.net/ape7kda.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@600&family=Raleway&family=Titillium+Web&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
</html>
<body data-title={title}>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
</body>
