---
import Logo from "./Logo.astro";
---

<header class="banner">
  <div class="sprog">
    <img src="/sprog.webp" alt="sprog" />
  </div> 
  <div class="header">
  <div class="logo">
    <Logo/>
  </div>
  <nav class="menu">
    <button class="toggle-btn">
      <span class="bar1"></span>
      <span class="bar2"></span>
      <span class="bar3"></span>
    </button>
    <ul>
      <li><a href="#quiz_game">Game</a></li>
      <li><a href="#reviews">Reviews</a></li>
    </ul>
  </nav>
</div>
</header>

<script src="../scripts/burger.js"></script>

<style>

a:hover {
  color:var(--six);
}
  button {
    border
  }

  .sprog img {
    width: 8%;
  }
  .sprog {
    display: flex;
    justify-content: flex-end;
    margin-right: 18.5%;
    padding-top: 1%;
  }

  .logo {
    margin-top: -2%;
  }

  .toggle-btn {
    background: transparent;
    border: none;
    cursor: pointer;
    display: none;
    min-width: 44px;
    min-height: 44px;
  }


  @media (min-width: 1201px) {

    header {
    background-color: white;
    box-shadow: 0px 15px 10px -15px #111;  
    /* box-shadow: 0 12px 28px 0 rgb(0 0 0 / 30%); */
  }
  .header {
    position: sticky;
    top: 0;
    z-index: 999;
    display: flex;
    justify-content: space-evenly;
    background-color: white;
    box-shadow: 0px 15px 10px -15px #111;
  }
  .header nav ul {
    display: flex;
    justify-content: flex-end;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 100%;
    font-size: 18px;
    padding-top: 15%;
  }
    .toggle-btn {
    background: transparent;
    border: none;
    cursor: pointer;
    display: none;
    min-width: 44px;
    min-height: 44px;
  }
  }

  @media (max-width: 1200px) {
    .banner {
      background: white;
      box-shadow: 0px 15px 10px -15px #111;  
      padding: 2rem;

      display: flex;
      flex-flow: wrap;
      justify-content: space-around;
      align-items: center;
      gap: 20px 40px;
    }

    .header {
      display: flex;
    }

    .sprog {
      display: none;
    }

    .menu {
      margin-top: 3%;
    }

    .menu.shown a {
      color: var(--black);
      text-decoration: none;
      text-transform: uppercase;
      line-height: 1.5rem;
    }

    .menu.shown a:hover {
      font-family: "montserrat", sans-serif;
      font-weight: 700;
      font-style: normal;
    }

    .toggle-btn {
      display: block;
    }

    .toggle-btn span {
      display: block;
    }

    .menu.shown {
      display: flex;
      flex-direction: column;
    }

    .menu ul {
      display: none;
    }

    .menu.shown > ul {
      border-top: 1px solid var(--black);
      padding-top: 1rem;
    }

    .menu.shown ul {
      display: flex;
      flex-flow: column;
      flex-basis: 100%;
      list-style: none;
      gap: 12px;
      font-size: 1.2rem;
    }

    .bar1,
    .bar2,
    .bar3 {
      width: 35px;
      height: 5px;
      background-color: black;
      margin: 6px 0;
      border-radius: 5px;
      transition: 0.4s;
    }

    .change .bar1 {
      transform: translate(0, 11px) rotate(-45deg);
    }

    .change .bar2 {
      opacity: 0;
    }

    .change .bar3 {
      transform: translate(0, -11px) rotate(45deg);
    }
  }
</style>
